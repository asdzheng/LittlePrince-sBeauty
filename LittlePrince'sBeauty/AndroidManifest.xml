<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asd.littleprincesbeauty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.asd.littleprincesbeauty.data.tool.NotesProvider"
            android:authorities="micode_notes"
            android:multiprocess="true" />

        <activity
            android:name="com.asd.littleprincesbeauty.activity.WriteNote"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.asd.littleprincesbeauty.activity.NoteEditActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.asd.littleprincesbeauty.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name="com.asd.littleprincesbeauty.activity.SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.asd.littleprincesbeauty.activity.PlayMusicActivity" >
        </activity>
        
        <activity android:name="com.asd.littleprincesbeauty.activity.RubblerActivity"
            	  android:theme="@android:style/Theme.Black.NoTitleBar"
            
            ></activity>

        <service android:name="com.asd.littleprincesbeauty.service.PlayMusicService" >
            <intent-filter>
                <action android:name="com.asd.littleprincesbeauty.service.PlayMusicService" />
            </intent-filter>
        </service>
    </application>

</manifest>